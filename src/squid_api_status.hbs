<div class='squid-api-core-widgets-status'>
{{#if running}}
	<div class="status-error alert alert-warning">{{message}}</div>
{{else}}
	<div class="status-error alert alert-info alert-dismissible">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		{{message}}
	</div>
{{/if}}
{{#if failed}}
	<div class="status-error alert alert-danger alert-dismissible">
		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		{{message}}
	</div>
{{/if}}
</div>
